{
    "$id": "https://example.com/basic.json",
    "$schema": "https://json-schema.org/2019-09/schema",
    "title": "PersonBasic",
    "type": "object",
    "properties": {
      "firstName": {
        "type": "string",
        "description": "The person's first name."
      },
      "lastName": {
        "type": "string",
        "description": "The person's last name."
